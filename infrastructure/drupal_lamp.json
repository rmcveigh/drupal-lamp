{
  "nfs_exports": {
    "/assets":  {
      "clients": {
        "*": {
          "writeable": true,
          "sync": false,
          "options": [
            "no_subtree_check",
            "all_squash",
            "async"
          ],
          "anon_user_name": "www-data",
          "anon_group_name": "www-data"
        }
      }
    }
  },
  "drupal_frontend": {
    "css_preprocessor":{
      "/srv/www/peeksi/current/profiles/peeksi/themes/custom/peeksi_bare":{
        "gems": [
          "bundler"
        ],
        "commands": [
          "bundle install && bundle update",
          "bundle exec compass compile"
        ]
      }
    }
  },
  "drupal": {
    "sites": {
      "peeksi": {
        "active": true,
        "deploy": {
          "action": ["import", "update"],
          "releases": 1
        },
        "drupal": {
          "version": "7.28",
          "install": {
            "install_configure_form.update_status_module": "'array(FALSE,FALSE)'",
            "--clean-url": 1
          },
          "settings": {
            "profile": "peeksi",
            "files": "sites/default/files",
            "cookbook": "drupal",
            "settings": {
              "default": {
                "location": "sites/default/settings.php"
              }
            },
            "db_name": "peeksi",
            "db_host": "localhost",
            "db_prefix": "",
            "db_driver": "mysql",
            "db_file": "/vagrant/Peeksi-2014-08-19T16-23-42.mysql"
          }
        },
        "repository": {
          "host": "github.com",
          "uri": "git@github.com:rmcveigh/peeksi.git",
          "revision": "qa"
        },
        "web_app": {
          "80": {
            "server_name": "peeksi.local",
            "rewrite_engine": "On",
            "docroot": "/srv/www/peeksi/current"
          }
        }
      }
    }
  }
}
