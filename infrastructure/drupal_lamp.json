{
  "php": {
    "directives": {
      "memory_limit": "512M"
    }
  },
  "drupal": {
    "sites": {
      "mmg_microsite": {
        "active": true,
        "deploy": {
          "action": ["deploy", "install"],
          "releases": 3
        },
        "drupal": {
          "version": "7.31",
          "registry_rebuild": false,
          "install": {
            "install_configure_form.update_status_module": "'array(FALSE,FALSE)'",
            "--clean-url": 1
          },
          "settings": {
            "profile": "mmg_microsite",
            "docroot": "",
            "files": "sites/default/files",
            "cookbook": "drupal",
            "settings": {
              "default": {
                "location": "sites/default/settings.php"
              }
            },
            "db_name": "mmg-microsite",
            "db_host": "localhost",
            "db_prefix": "",
            "db_driver": "mysql",
            "db_file": ""
          }
        },
        "repository": {
          "host": "",
          "uri": "/vagrant/sites/mmg_microsite/drupal",
          "revision": "master",
          "submodule": false,
          "remotes": {
            "upstream": "ryan@pluto.milesmedia.com:/home/ryan/mmg_microsite"
          }
        },
        "web_app": {
          "80": {
            "server_name": "mmg-microsite.local",
            "rewrite_engine": "On",
            "docroot": "/srv/www/mmg_microsite/current"
          }
        }
      }
    }
  },
  "nfs_exports": {
    "/assets": {
      "clients": {
        "*": {
          "writeable": true,
          "sync": true,
          "options": [
            "all_squash",
            "anonuid=33",
            "anongid=33"
          ]
        }
      }
    }
  },
  "nodejs": {
    "install_method": "package",
    "npm": "1.4.26"
  },
  "drupal_frontend": {
    "nodejs": {
      "packages":["grunt", "grunt-cli", "bower"]
    },
    "css_preprocessor": {
      "/srv/www/colorado/current/htdocs/sites/all/themes/mmg_microsite_bare": {
        "active": false,
        "gems": [
          "bundler"
        ],
        "commands": [
          "bundle install && bundle update"
        ]
      }
    }
  }
}
