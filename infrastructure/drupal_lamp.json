{
  "php": {
    "directives": {
      "memory_limit": "512M"
    }
  },
  "drupal": {
    "sites": {
      "colorado": {
        "active": true,
        "deploy": {
          "action": ["deploy", "import", "update"],
          "releases": 3
        },
        "drupal": {
          "version": "7.26",
          "registry_rebuild": false,
          "install": {
            "install_configure_form.update_status_module": "'array(FALSE,FALSE)'",
            "--clean-url": 1
          },
          "settings": {
            "profile": "mmg_custom",
            "docroot": "htdocs",
            "files": "htdocs/sites/default/files",
            "cookbook": "drupal",
            "settings": {
              "default": {
                "ignore": true,
                "location": "htdocs/sites/default/settings.php"
              },
              "local_dev": {
                "location": "sites/all/settings.colorado.localdev.php"
              }
            },
            "db_name": "colorado",
            "db_host": "localhost",
            "db_prefix": "",
            "db_driver": "mysql",
            "db_file": "/vagrant/sites/colorado/dbs/colorado09102014.sql"
          }
        },
        "repository": {
          "host": "",
          "uri": "/vagrant/sites/colorado/code",
          "revision": "grunt",
          "submodule": true,
          "remotes": {
            "upstream": "ryan@pluto.milesmedia.com:/home/ryan/colorado.com",
            "bobby": "git@10.20.1.17:bobby/colorado-com.git",
            "bobby-pluto": "ryan@pluto.milesmedia.com:/home/bobby/colorado.com",
            "tim": "ryan@pluto.milesmedia.com:/home/tim/colorado.com"
          }
        },
        "web_app": {
          "80": {
            "server_name": "colorado.local",
            "rewrite_engine": "On",
            "docroot": "/srv/www/colorado/current/htdocs"
          }
        }
      }
    }
  },
  "nfs_exports": {
    "/assets": {
      "clients": {
        "*": {
          "writeable": true,
          "sync": true,
          "options": [
            "all_squash",
            "anonuid=33",
            "anongid=33"
          ]
        }
      }
    }
  },
  "nodejs": {
    "install_method": "package",
    "npm": "1.4.26"
  },
  "drupal_frontend": {
    "nodejs": {
      "packages":["grunt", "grunt-cli", "bower"]
    },
    "css_preprocessor": {
      "/srv/www/colorado/current/htdocs/sites/all/themes/mmg_aurora": {
        "gems": [
          "bundler"
        ],
        "commands": [
          "bundle install && bundle update",
          "bundle exec compass compile"
        ]
      }
    }
  }
}
